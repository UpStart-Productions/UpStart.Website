baseURL = "https://upstart.solutions/"
languageCode = "en-us"
title = "UpStart Productions"
pagination.pagerSize = 12
enableRobotsTXT = true
canonifyURLs = true
relativeURLs = true
theme = ""

[module]
  [[module.imports]]
    path = "github.com/nunocoracao/blowfish/v2"

# Clean URLs (Hugo default, but explicit here)
disablePathToLower = false
uglyURLs = false

# Goldmark: allow HTML in Markdown (for data-* and inline HTML)
[markup]
  [markup.goldmark]
    [markup.goldmark.renderer]
      unsafe = true
  [markup.tableOfContents]
    startLevel = 2
    endLevel = 4

# Clean URL structure
[permalinks]
  posts = "/:slug/"

# Menu configuration
[menu]
  [[menu.main]]
    name = "Home"
    pageRef = "/"
    weight = 10

  [[menu.main]]
    name = "About"
    pageRef = "/about"
    weight = 20

  [[menu.main]]
    name = "Services"
    pageRef = "/services"
    weight = 30

  [[menu.main]]
    name = "Portfolio"
    pageRef = "/portfolio"
    weight = 40

  [[menu.main]]
    name = "Nepho"
    pageRef = "/nepho"
    weight = 50

  [[menu.main]]
    name = "Contact"
    pageRef = "/contact"
    weight = 60

# Blowfish theme parameters
[params]
  colorScheme = "auto"
  defaultAppearance = "dark"
  autoSwitchAppearance = false
  
  # Site metadata
  description = "UpStart Productions - Creative solutions and innovative technology"
  
  # Homepage layout
  homepage.layout = "hero"

  # Brand palette
  primaryColor = "#0ea5e9"   # cyan-500 (buttons, links, accents)
  secondaryColor = "#14b8a6" # teal-500 (hover states, highlights)
  neutralColor = "#1e293b"   # slate-800 (cards, section backgrounds)

  # Optional: fine-tune text
  textColor = "#f1f5f9"      # slate-100 (main body text)
  headingColor = "#ffffff"   # pure white for titles
  
  # Article settings
  article.showDate = true
  article.showDateUpdated = false
  article.showAuthor = false
  article.showWordCount = false
  article.showReadingTime = false
  article.showEdit = false
  article.showViews = false
  article.showLikes = false
  article.showTaxonomies = false
  article.showPagination = true
  article.invertPagination = false
  article.showToC = false
  article.tocOpen = false
  
  # List settings
  list.showBreadcrumbs = false
  list.showSummary = false
  list.showViews = false
  list.showLikes = false
  list.showTableOfContents = false
  list.showCards = true
  list.groupByYear = false
  list.cardView = false
  list.cardViewScreenWidth = false
  
  # Site settings
  site.showCopyright = true
  site.showThemeAttribution = false
  site.showAppearanceSwitcher = true
  site.showScrollToTop = true